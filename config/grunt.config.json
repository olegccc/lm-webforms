{
  "ts": {
    "options": {
      "fast": "never",
      "module": "amd",
      "target": "es3",
      "declaration": false,
      "failOnTypeErrors": true,
      "sourceMap": false,
      "removeComments": true
    },
    "build": {
      "files":
      [{
        "src": [
          "./src/**/*.ts",
          "./typings/tsd.d.ts",
          "!./src/views/*.ts"
        ],
        "dest": "./build"
      }]
    },
    "tests": {
      "files": [
        {
          "src": [
            "./test/app/**/*.ts",
            "./typings/tsd.d.ts",
            "./test/specs/**/*.ts"
          ],
          "dest": "./build"
        }
      ]
    }
  },
  "uglify": {
    "default": {
      "files": {
        "./release/lm-webforms.amd.min.js": "./release/lm-webforms.amd.js",
        "./release/lm-webforms.min.js": "./release/lm-webforms.js"
      }
    }
  },
  "connect": {
    "options": {
      "port": 9090,
      "base": "."
    },
    "start": {
    },
    "keepalive": {
      "options": {
        "keepalive": true
      }
    }
  },
  "protractor": {
    "options": {
      "configFile": "./config/protractor.config.js"
    },
    "default": {
    }
  },
  "jade": {
    "default": {
      "options": {
        "amd": false,
        "namespace": false
      },
      "files": []
    }
  },
  "requirejs": {
    "amd": {
      "options": {
        "baseUrl": "./build",
        "out": "./release/lm-webforms.amd.js",
        "mainConfigFile": "./build/paths.js",
        "name": "lm-webforms",
        "optimize": "none",
        "paths": {
          "lodash": "empty:",
          "autolinker": "empty:",
          "angular": "empty:",
          "jquery": "empty:",
          "angular.animate": "empty:",
          "angular.translate": "empty:",
          "angular.material": "empty:",
          "angular.aria": "empty:",
          "angular.messages": "empty:",
          "angular.touch": "empty:"
        }
      }
    },
    "almond": {
      "options": {
        "baseUrl": "./build",
        "out": "./release/lm-webforms.js",
        "mainConfigFile": "./build/paths.js",
        "name": "../bower_components/almond/almond",
        "optimize": "none",
        "paths": {
          "lodash": "empty:",
          "autolinker": "empty:",
          "angular": "empty:",
          "jquery": "empty:",
          "angular.animate": "empty:",
          "angular.translate": "empty:",
          "angular.material": "empty:",
          "angular.aria": "empty:",
          "angular.messages": "empty:",
          "angular.touch": "empty:"
        }
      }
    }
  },
  "copy": {
    "bootstrap": {
      "src": "./src/bootstrap/paths.js",
      "dest": "./build/paths.js"
    }
  },
  "clean": {
    "build": ["./build"],
    "post-build": ["./src/**/*.js"]
  },
  "umd": {
    "all": {
      "options": {
        "src": "./release/lm-webforms.modular.js",
        "dest": "./release/lm-webforms.js",
        "deps": {
          "default": ["angular"]
        }
      }
    }
  }
}
