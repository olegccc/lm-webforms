{
  "ts": {
    "options": {
      "fast": "never",
      "target": "es3",
      "module": "amd",
      "declaration": false,
      "failOnTypeErrors": true,
      "sourceMap": false,
      "removeComments": false
    },
    "build": {
      "files":
      {
        "build/lm-webforms.js": [
          "src/modules/**/*.ts",
          "src/templates/**/*.ts",
          "src/datatypes/**/*.ts",
          "src/interfaces/**/*.ts",
          "src/services/**/*.ts",
          "src/**/*.ts",
          "typings/tsd.d.ts"
        ]
      }
    },
    "tests": {
      "files": [
        {
          "src": [
            "./test/app/**/*.ts",
            "./typings/tsd.d.ts",
            "./test/specs/**/*.ts"
          ],
          "dest": "./build"
        }
      ]
    }
  },
  "uglify": {
    "default": {
      "files": {
        "./release/lm-webforms.min.js": "./release/lm-webforms.js"
      }
    }
  },
  "connect": {
    "options": {
      "port": 9090,
      "base": "."
    },
    "start": {
    },
    "keepalive": {
      "options": {
        "keepalive": true
      }
    }
  },
  "copy": {
    "interfaces": {
      "expand": true,
      "cwd": "src/interfaces",
      "src": "*",
      "dest": "release/interfaces/",
      "filter": "isFile"
    }
  },
  "protractor": {
    "options": {
      "configFile": "./config/protractor.config.js"
    },
    "default": {
    }
  },
  "clean": {
    "build": ["build"],
    "post-build": ["src/**/*.js", "!src/bootstrap/*.js"]
  },
  "umd": {
    "all": {
      "options": {
        "src": "build/lm-webforms.js",
        "dest": "release/lm-webforms.js",
        "deps": {
          "default": [
            "angular",
            "angular_animate",
            "angular_translate",
            "angular_messages",
            "angular_material",
            "angular_aria",
            "angular_touch",
            "autolinker",
            "recaptcha"
          ]
        }
      }
    }
  }
}
